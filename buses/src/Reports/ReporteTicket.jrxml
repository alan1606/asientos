	<queryString>
		<![CDATA[select costo, anticipo, personas, sube,DATE_FORMAT(hora, "%I:%m %p") as hora, group_concat(asiento.numero) as asientos, detalle.viaje as viaje, viaje.observaciones as observaciones, detalle.pago as pago, DATE_FORMAT(hora_regreso, "%I:%m %p") as hora_regreso, DATE_FORMAT(fecha_regreso, "%d/%m/%Y") as fecha_regreso, DATE_FORMAT(fecha_venta, "%d/%m/%Y") as fecha_venta, detalle.personas as numero, cliente.telefono as telefono from detalle 
join cliente on detalle.id_cliente = cliente.id
join viaje on detalle.id_viaje = viaje.id
join  destino on viaje.id_destino = destino.id
join asiento on asiento.id_viaje=viaje.id and asiento.id_cliente = cliente.id
join estado on estado.id = destino.id_estado
where detalle.id_cliente = $P{idCliente} and detalle.id_viaje = $P{idViaje} and detalle.estado != "CANCELADO";]]>
	</queryString>
